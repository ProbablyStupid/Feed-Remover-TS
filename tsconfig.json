{
  "compilerOptions": {
    "target": "ES6",                       // Chrome supports ES6+
    "module": "ESNext",                    // or "ESNext" or "ES2020"
    "moduleResolution": "node",
    "outDir": "dist",                      // where compiled JS goes
    "strict": true,                        // enable all strict type-checking options
    "esModuleInterop": true,               // allow default import syntax with CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,                     // helpful for debugging in DevTools
    "declaration": false,                  // optional: no .d.ts files generated
    "types": ["chrome"]
},
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}